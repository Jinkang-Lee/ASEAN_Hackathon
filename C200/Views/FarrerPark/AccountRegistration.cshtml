<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/Register.css" />
    <title>Visitor Login</title>
</head>

<body>
    @await Html.PartialAsync("NavBar")

    <!--Login-->
    <form method="post" action="/FarrerPark/AccountRegistrationPost">
        <section id="banner">
            <div class="container" id="register-container">
                <div class="row" id="RegisterSection">

                    <div class="col-sm-6 text-center">
                        <img src="~/images/Registerimage.svg" class="img-fluid" />
                    </div>
                    <div class="card offset-sm-2 col-sm-4" id="info-card">

                        <div class="card-body" id="cardbody">

                            <div class="row">
                                <div class="col offset-3 p-5">
                                    <svg width="5em" height="5em" viewBox="0 0 16 16" class="bi bi-person-bounding-box" fill="black" xmlns="http://www.w3.org/2000/svg">
                                        <path fill-rule="evenodd" d="M1.5 1a.5.5 0 0 0-.5.5v3a.5.5 0 0 1-1 0v-3A1.5 1.5 0 0 1 1.5 0h3a.5.5 0 0 1 0 1h-3zM11 .5a.5.5 0 0 1 .5-.5h3A1.5 1.5 0 0 1 16 1.5v3a.5.5 0 0 1-1 0v-3a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 1-.5-.5zM.5 11a.5.5 0 0 1 .5.5v3a.5.5 0 0 0 .5.5h3a.5.5 0 0 1 0 1h-3A1.5 1.5 0 0 1 0 14.5v-3a.5.5 0 0 1 .5-.5zm15 0a.5.5 0 0 1 .5.5v3a1.5 1.5 0 0 1-1.5 1.5h-3a.5.5 0 0 1 0-1h3a.5.5 0 0 0 .5-.5v-3a.5.5 0 0 1 .5-.5z" />
                                        <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                                    </svg>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col offset-3" id="register-text">
                                    <h1><b>Register</b></h1>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 p-3">
                                    <input type="text" id="Name" class="form-control border" name="Name" placeholder="Name" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 p-3">
                                    <input type="text" id="NRIC" class="form-control border" name="NRIC" placeholder="NRIC" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 p-3">
                                    <input type="date" id="DOB" class="form-control border" name="DOB" placeholder="Date-Of-Birth" />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12 text-center p-3">
                                    <button type="submit" id="SignUp" name="SignUp" class="btn btn-primary btn-lg">   Sign up   </button>
                                </div>
                            </div>

                            <div class="row" id="GotAccount">
                                <div class="col-md-12 text-center p-3">
                                    <p>Already have an account? <a href="/FarrerPark/LoginPage">Sign in Here</a></p>
                                </div>
                            </div>





                            <!-- Error Message-->
                            @if (ViewData["Message"] != null)
                            {
                                <div class="form-group row">
                                    <div class="offset-sm-2 col-sm-5">
                                        <div class="alert alert-@ViewData["MsgType"]">
                                            @ViewData["Message"]
                                        </div>
                                    </div>
                                </div>}
                        </div>
                    </div>

                </div>

            </div>
        </section>
        </form>

        <div class="container" id="spacing">

        </div>

        @await Html.PartialAsync("CovidMsg")


</body>