
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width = device-width, initial-scale = 1.0, maximum-scale = 1.0, user-scalable = no">
    <title>Farrer Park Hospital</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/brands.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Visitation2.css" />
</head>


<body>

    <!--Navigation Bar-->
    @await Html.PartialAsync("navbar")

    <section id="banner">
        <form method="post" action="/NewFarrerPark/HomePage">
            <div class="row">
                <div class="offset-sm-2 col-sm-8">
                    <h3>A 6-digit pin number has been sent to your phone, please use it for both entering and exiting at the gantry.</h3>

                    <div class="row text-center p-3" id="homebtn">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-primary btn-lg">Confirm</button>
                        </div>
                    </div>
                </div>
            </div>






            <!-- Error Message-->
            <div class="offset-sm-3 col-sm-6 ">
                @if (ViewData["Message"] != null)
                {
                    <div class="alert alert-warning">
                        @ViewData["Message"]
                    </div>
                }

            </div>
        </form>
    </section>



    @await Html.PartialAsync("CovidMsg")
</body>