
<!DOCTYPE html>
<head>
    <meta name="viewport" content="width = device-width, initial-scale = 1.0, maximum-scale = 1.0, user-scalable = no">
    <title>Farrer Park Hospital</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link href="~/lib/font-awesome/css/fontawesome.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/brands.min.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/solid.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/Visitation1.css" />
</head>


<body>

    <!--Navigation Bar-->
    @await Html.PartialAsync("navbar")

    <form method="post" action="/NewFarrerPark/Visitation1Post">
        <section id="banner">

            <div class="container">
                <div class="row">

                    <div class="col-sm-6 text-center">
                        <img src="~/images/Registerimage.svg" class="img-fluid" />
                    </div>

                    <div class="container col-sm-6 bg-light" id="booking">
                        <div class="row text-center p-3" id="visitorinfo">
                            <div class="col-sm-12">
                                <h1><b> - Bed & Ward - </b></h1>
                            </div>
                        </div>

                        

                        <div class="form-group row p-3" id="contents">
                            <label class="control-label offset-sm-2 col-sm-2" for="WardNumber" id="lbl">Ward Number: </label>
                            <div class="col-sm-6">
                                <input type="text" name="WardNumber" id="WardNumber" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group row p-3" id="contents">
                            <label class="control-label offset-sm-2 col-sm-2" for="BedNumber" id="lbl">Bed Number: </label>
                            <div class="col-sm-6">
                                <input type="text" name="BedNumber" id="BedNumber" class="form-control" />
                            </div>
                        </div>


                        <div class="row text-center p-3" id="nextbtn">
                            <div class="col-sm-12">
                                <button type="submit" class="btn btn-primary btn-lg">Proceed</button>
                            </div>
                        </div>


                        <!-- Error Message-->
                        <div class="offset-sm-3 col-sm-6 ">
                            @if (ViewData["Message"] != null)
                            {
                                <div class="alert alert-warning">
                                    @ViewData["Message"]
                                </div>
                            }

                        </div>
                    </div>
                </div>
            </div>
            
        </section>
    </form>


    @await Html.PartialAsync("CovidMsg")


</body>